datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Puzzle {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  explanation  String
  blog_url     String   @default("")
  created_at   DateTime @default(now())
}

model PuzzleItem {
  id         Int      @id @default(autoincrement())
  puzzle_id  Int
  order_no   Int
  label      String
  answer     String
  created_at DateTime @default(now())
}