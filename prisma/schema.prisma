datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Puzzle {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  numOfAnswer Int
  explanation String
  createdAt   DateTime @default(now())
}

model PuzzleAnswer {
  id        Int      @id @default(autoincrement())
  puzzleId  Int
  answerNo  Int
  message   String
  answer    String
  createdAt DateTime @default(now())
}